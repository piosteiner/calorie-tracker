# Environment Configuration for Calorie Tracker API

# Server Configuration
PORT=3000
NODE_ENV=production
FRONTEND_URL=https://calorie-tracker.piogino.ch

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=calorie_tracker_user
DB_PASSWORD=your_secure_password
DB_NAME=calorie_tracker

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production

# Open Food Facts Configuration
OPEN_FOOD_FACTS_USER_AGENT=CalorieTracker/1.0 (contact@piogino.ch)
OPEN_FOOD_FACTS_TIMEOUT=5000

# Cache Configuration
CACHE_CLEANUP_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log