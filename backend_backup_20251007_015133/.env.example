# Environment Configuration for Calorie Tracker API

# Server Configuration
PORT=3000
NODE_ENV=production
FRONTEND_URL=https://calorie-tracker.piogino.ch

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=calorie_tracker_user
DB_PASSWORD=
DB_NAME=calorie_tracker

# JWT Configuration (REQUIRED - Generate a secure random string)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log